dmrs:arg2
 a dmrs:Role .

dmrs:arg3
 a dmrs:Role .

dmrs:arg4
 a dmrs:Role .

dmrs:rstr
 a dmrs:Role .

dmrs:l-hndl
 a dmrs:Role .

dmrs:r-hndl
 a dmrs:Role .

dmrs:l-index
 a dmrs:Role .

dmrs:r-index
 a dmrs:Role .

dmrs:mod
 a dmrs:Role .


dmrs:h
 a dmrs:ScopalRelation .

dmrs:neq
 a dmrs:ScopalRelation .

dmrs:eq
 a dmrs:ScopalRelation .

dmrs:heq
 a dmrs:ScopalRelation .


